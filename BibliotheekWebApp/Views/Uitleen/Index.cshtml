@model IEnumerable<BibliotheekApp.Models.LidBoek>

@{
    ViewData["Title"] = "Uitgeleende Boeken";
}

<h2>Uitgeleende Boeken</h2>

<form method="get" asp-action="Index">
    <div class="input-group mb-3">
        <input type="text" name="searchTerm" value="@ViewContext.HttpContext.Request.Query["searchTerm"]" class="form-control" placeholder="Zoek op titel of lid naam..." />
        <button class="btn btn-primary" type="submit">Zoeken</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Boektitel</th>
            <th>Lid Naam</th>
            <th>Uitleendatum</th>
            <th>Inleverdatum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Boek.Titel</td>
                <td>@item.Lid.Naam</td>
                <td>@item.UitleenDatum.ToString("dd-MM-yyyy")</td>
                <td>@item.InleverDatum.ToString("dd-MM-yyyy")</td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p class="text-muted">Geen resultaten gevonden.</p>
}

