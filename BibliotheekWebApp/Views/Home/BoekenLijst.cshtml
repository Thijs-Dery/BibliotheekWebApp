@model IEnumerable<BibliotheekApp.Models.Boek>

<h2>Boekenlijst</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Voeg Boek Toe</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ISBN</th>
            <th>Titel</th>
            <th>Genre</th>
            <th>Publicatie Datum</th>
            <th>Auteur</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var boek in Model)
        {
            <tr>
                <td>@boek.ISBN</td>
                <td>@boek.Titel</td>
                <td>@boek.Genre</td>
                <td>@boek.PublicatieDatum.ToString("dd-MM-yyyy")</td>
                <td>@(boek.Auteur?.Naam ?? "Onbekend")</td>
                <td>
                    <a asp-action="Edit" asp-controller="Boek" asp-route-id="@boek.ISBN" class="btn btn-warning">Bewerken</a>
                    <a asp-action="Delete" asp-controller="Boek" asp-route-id="@boek.ISBN" class="btn btn-danger">Verwijderen</a>
                </td>
            </tr>
        }
    </tbody>
</table>

