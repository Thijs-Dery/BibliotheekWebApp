@model IEnumerable<BibliotheekApp.Models.Lid>

<h2>Leden Lijst</h2>

<a href="@Url.Action("Create", "Leden")" class="btn btn-primary">Voeg Lid Toe</a>

<table class="table">
    <thead>
        <tr>
            <th>Lid ID</th>
            <th>Naam</th>
            <th>Geboorte Datum</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lid in Model)
        {
            <tr>
                <td>@lid.LidID</td>
                <td>@lid.Naam</td>
                <td>@lid.GeboorteDatum.ToString("dd-MM-yyyy")</td>
                <td>
                    <a href="@Url.Action("Edit", "Leden", new { id = lid.LidID })" class="btn btn-warning">Bewerken</a>
                    <form action="@Url.Action("Delete", "Leden", new { id = lid.LidID })" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Verwijderen</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

