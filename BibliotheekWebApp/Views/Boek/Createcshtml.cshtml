@{
    ViewData["Title"] = "Boek Toevoegen";
}

<h2>Voeg een nieuw boek toe</h2>

<form method="post">
    <div class="form-group">
        <label for="titel">Titel</label>
        <input type="text" class="form-control" id="titel" name="titel" required />
    </div>
    <div class="form-group">
        <label for="genre">Genre</label>
        <input type="text" class="form-control" id="genre" name="genre" required />
    </div>
    <div class="form-group">
        <label for="publicatieDatum">Publicatie Datum</label>
        <input type="date" class="form-control" id="publicatieDatum" name="publicatieDatum" required />
    </div>
    <div class="form-group">
        <label for="auteurId">Auteur</label>
        <select class="form-control" id="auteurId" name="auteurId" required>
            @foreach (var auteur in ViewData["Auteurs"] as List<BibliotheekApp.Models.Auteur>)
            {
                <option value="@auteur.AuteurID">@auteur.Naam</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="isbn">ISBN (optioneel)</label>
        <input type="text" class="form-control" id="isbn" name="isbn" />
    </div>
    <button type="submit" class="btn btn-primary">Toevoegen</button>
</form>
