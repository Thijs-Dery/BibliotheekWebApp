@model IEnumerable<BibliotheekApp.Models.Boek>

<h2>Boekenlijst</h2>

@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-primary mb-3">Voeg Boek Toe</a>
}

<table class="table">
    <thead>
        <tr>
            <th>ISBN</th>
            <th>Titel</th>
            <th>Genre</th>
            <th>Publicatie Datum</th>
            <th>Auteur</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Acties</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var boek in Model)
        {
            <tr>
                <td>@boek.ISBN</td>
                <td>@boek.Titel</td>
                <td>@boek.Genre</td>
                <td>@boek.PublicatieDatum.ToString("dd-MM-yyyy")</td>
                <td>@boek.Auteur?.Naam</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@boek.ISBN" class="btn btn-warning">Bewerken</a>
                        <a asp-action="Delete" asp-route-id="@boek.ISBN" class="btn btn-danger">Verwijderen</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
