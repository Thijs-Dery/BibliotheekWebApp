@model BibliotheekApp.Models.Boek

@{
    ViewData["Title"] = "Verwijder Boek";
}

<h2>Verwijder Boek</h2>

<p>Weet je zeker dat je het boek <strong>@Model.Titel</strong> wilt verwijderen?</p>

<form action="@Url.Action("Delete", "Boek", new { id = Model.ISBN })" method="post">
    <button type="submit" class="btn btn-danger">Verwijderen</button>
    <a href="@Url.Action("Index", "Boek")" class="btn btn-secondary">Annuleren</a>
</form>

