@model BibliotheekApp.Models.Boek

<h2>Bewerk Boek</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ISBN" />

    <div class="form-group">
        <label asp-for="Titel"></label>
        <input asp-for="Titel" class="form-control" />
        <span asp-validation-for="Titel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genre"></label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PublicatieDatum"></label>
        <input asp-for="PublicatieDatum" type="date" class="form-control" />
        <span asp-validation-for="PublicatieDatum" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AuteurID"></label>
        <select asp-for="AuteurID" class="form-control" asp-items="@(new SelectList(ViewData["Auteurs"] as List<BibliotheekApp.Models.Auteur>, "AuteurID", "Naam", Model.AuteurID))">
            <option value="">Selecteer een auteur</option>
        </select>
        <span asp-validation-for="AuteurID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Opslaan</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>
