@model BibliotheekApp.Models.Boek

@{
    ViewData["Title"] = "Nieuw Boek";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="Titel">Titel</label>
        <input type="text" class="form-control" id="Titel" name="Titel" value="@Model.Titel" required />
    </div>

    <div class="form-group">
        <label for="Genre">Genre</label>
        <input type="text" class="form-control" id="Genre" name="Genre" value="@Model.Genre" required />
    </div>

    <div class="form-group">
        <label for="PublicatieDatum">Publicatie Datum</label>
        <input type="date" class="form-control" id="PublicatieDatum" name="PublicatieDatum" value="@Model.PublicatieDatum.ToString("yyyy-MM-dd")" required />
    </div>

    <div class="form-group">
        <label for="AuteurID">Auteur</label>
        <select class="form-control" id="AuteurID" name="AuteurID" required>
            <option value="">Selecteer Auteur</option>
            @foreach (var auteur in ViewData["Auteurs"] as IEnumerable<BibliotheekApp.Models.Auteur>)
            {
                <option value="@auteur.AuteurID" selected="@((auteur.AuteurID == Model.AuteurID) ? "selected" : "")">
                    @auteur.Naam
                </option>

            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Opslaan</button>
    <a href="@Url.Action("Index", "Boek")" class="btn btn-secondary">Annuleren</a>
</form>




