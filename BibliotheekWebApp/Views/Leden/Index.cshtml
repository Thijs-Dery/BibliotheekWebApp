@model IEnumerable<BibliotheekApp.Models.Lid>

<h2>Ledenlijst</h2>

<table class="table">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Geboortedatum</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lid in Model)
        {
            <tr>
                <td>@lid.Naam</td>
                <td>@lid.GeboorteDatum.ToShortDateString()</td>
                <td>
                    <a asp-controller="Leden" asp-action="Edit" asp-route-id="@lid.LidID" class="btn btn-warning">Bewerken</a>
                    <a asp-controller="Leden" asp-action="Delete" asp-route-id="@lid.LidID" class="btn btn-danger">Verwijderen</a>
                    <a asp-controller="Leden" asp-action="BeheerBoeken" asp-route-id="@lid.LidID" class="btn btn-info">Beheer Boeken</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Leden" asp-action="Create" class="btn btn-primary">Voeg Nieuw Lid Toe</a>

