@model BibliotheekApp.Models.Lid

<h2>Lid Verwijderen</h2>

<div>
    <p>Weet je zeker dat je dit lid wilt verwijderen?</p>
    <p>
        <strong>Naam:</strong> @Model.Naam <br />
        <strong>Geboortedatum:</strong> @Model.GeboorteDatum.ToShortDateString()
    </p>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.LidID" method="post">
    <button type="submit" class="btn btn-danger">Verwijderen</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>
