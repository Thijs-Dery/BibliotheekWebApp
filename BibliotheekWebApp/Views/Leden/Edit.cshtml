@model BibliotheekApp.Models.Lid

<h2>Bewerk Lid</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="LidID" />

    <div class="form-group">
        <label for="Naam">Naam</label>
        <input type="text" asp-for="Naam" class="form-control" />
        <span asp-validation-for="Naam" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="GeboorteDatum">Geboorte Datum</label>
        <input type="date" asp-for="GeboorteDatum" class="form-control" />
        <span asp-validation-for="GeboorteDatum" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Bewaar Wijzigingen</button>
</form>

<a href="@Url.Action("Index", "Lid")" class="btn btn-secondary">Terug naar Ledenlijst</a>
