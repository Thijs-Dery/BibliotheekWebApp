@model BibliotheekApp.Models.Lid

<h2>Lid Bewerken</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="LidID" />
    <div class="form-group">
        <label asp-for="Naam" class="control-label"></label>
        <input asp-for="Naam" class="form-control" />
        <span asp-validation-for="Naam" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GeboorteDatum" class="control-label"></label>
        <input asp-for="GeboorteDatum" class="form-control" type="date" />
        <span asp-validation-for="GeboorteDatum" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Opslaan</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>
