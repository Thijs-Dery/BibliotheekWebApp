@model BibliotheekApp.Models.Lid

<h2>Bewerk Lid</h2>

<form method="post">
    <div class="form-group">
        <label for="naam">Naam</label>
        <input type="text" class="form-control" id="naam" name="naam" value="@Model.Naam" required />
    </div>
    <div class="form-group">
        <label for="geboorteDatum">Geboorte Datum</label>
        <input type="date" class="form-control" id="geboorteDatum" name="geboortedatum" value="@Model.GeboorteDatum.ToString("yyyy-MM-dd")" required />
    </div>
    <button type="submit" class="btn btn-primary">Opslaan</button>
</form>
