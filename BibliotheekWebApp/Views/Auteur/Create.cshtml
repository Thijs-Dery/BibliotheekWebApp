@model BibliotheekApp.Models.Auteur

@{
    ViewData["Title"] = "Auteur Toevoegen";
}

<h2>Auteur Toevoegen</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Naam"></label>
        <input asp-for="Naam" class="form-control" />
        <span asp-validation-for="Naam" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GeboorteDatum"></label>
        <input asp-for="GeboorteDatum" class="form-control" />
        <span asp-validation-for="GeboorteDatum" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Opslaan</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Annuleren</a>
</form>
